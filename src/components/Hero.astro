<section class="relative min-h-screen flex items-center justify-center px-6 py-16 overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-black to-gray-900"></div>
  <div class="absolute top-20 left-10 w-64 h-64 bg-orange-500/10 rounded-full blur-[100px] animate-pulse-slow"></div>
  <div class="absolute bottom-20 right-10 w-80 h-80 bg-orange-400/5 rounded-full blur-[120px] animate-float"></div>
  
  <!-- Content -->
  <div class="relative z-10 max-w-4xl mx-auto text-center">
    <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/5 backdrop-blur-sm border border-white/10 mb-6">
      <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
      <span class="text-sm text-gray-300">Live Market Data</span>
    </div>
    
    <h1 class="text-4xl md:text-6xl font-bold mb-5 leading-tight">
      Trade Smarter with <br />
      <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">TradeGPT</span>
    </h1>
    
    <p class="text-lg md:text-xl text-gray-300 mb-3 max-w-2xl mx-auto">
      No FOMO. Just <strong class="text-white">BUY</strong>, <strong class="text-white">SELL</strong>, or <strong class="text-white">WAIT</strong> signals
    </p>
    
    <p class="text-base text-gray-400 mb-10 max-w-xl mx-auto">
      Backed by live RSI, MACD, support/resistance levels, and macro indicators. 
      Perfect for swing traders with day jobs.
    </p>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-3 justify-center items-center mb-12">
      <a href="#pricing" class="group inline-flex items-center gap-2 px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-orange-500/25">
        Try Free Now
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </a>
      <a href="#features" class="inline-flex items-center gap-2 px-6 py-3 bg-white/5 hover:bg-white/10 text-white font-medium rounded-lg border border-white/20 hover:border-white/30 transition-all duration-200 backdrop-blur-sm">
        See How It Works
      </a>
    </div>
    
    <!-- Social Proof -->
    <div class="flex flex-col items-center gap-4">
      <div class="flex items-center gap-2 text-xs text-gray-400">
        <div class="flex -space-x-2">
          <div class="w-6 h-6 bg-gradient-to-r from-orange-400 to-orange-600 rounded-full border-2 border-black"></div>
          <div class="w-6 h-6 bg-gradient-to-r from-blue-400 to-blue-600 rounded-full border-2 border-black"></div>
          <div class="w-6 h-6 bg-gradient-to-r from-green-400 to-green-600 rounded-full border-2 border-black"></div>
        </div>
        <span>2,400+ traders trust TradeGPT</span>
      </div>
    </div>
  </div>
</section>