---
const pricingTiers = [
  {
    name: "Free Tier",
    price: "$0",
    description: "Perfect to get started",
    features: [
      "3 signals per day",
      "BTC & ETH analysis",
      "Basic technical indicators",
      "Daily market summary"
    ],
    buttonText: "Start Free",
    buttonLink: "#",
    isPopular: false,
    buttonClass: "w-full py-3 px-4 bg-white/10 hover:bg-white/20 text-white font-medium rounded-lg border border-white/20 hover:border-orange-500/30 transition-all duration-200",
    cardClass: "group p-6 rounded-xl bg-white/5 backdrop-blur-sm border border-white/10 hover:border-white/20 transition-all duration-300"
  },
  {
    name: "Pro Tier",
    price: "$65",
    priceSubtext: "one-time",
    description: "Everything you need to trade smart",
    features: [
      "Unlimited signals",
      "All crypto pairs (20+ assets)",
      "Advanced macro analysis",
      "Support & resistance levels",
      "Custom watchlists",
      "Risk management tools",
      "Priority support"
    ],
    buttonText: "Get Pro Access",
    buttonLink: "https://remote.myr.id/pl/tradegpt",
    isPopular: true,
    buttonClass: "block w-full py-3 px-4 bg-gradient-to-r from-orange-400 to-orange-600 hover:from-orange-500 hover:to-orange-700 text-white font-medium rounded-lg transition-all duration-200 hover:shadow-lg hover:shadow-orange-500/25 text-center",
    cardClass: "group p-6 rounded-xl bg-gradient-to-br from-orange-500/10 to-orange-600/5 backdrop-blur-sm border border-orange-500/30 hover:border-orange-500/50 transition-all duration-300 relative overflow-hidden"
  }
];

// Statistik Pro
const proStats = [
  { value: "20+", label: "Crypto pairs covered" },
  { value: "5min", label: "Daily time investment" },
  { value: "$0", label: "Monthly fees (one-time)" }
];
---

<section id="pricing" class="py-16 px-6 relative">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-black via-gray-900/30 to-black"></div>
  
  <div class="relative z-10 max-w-4xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Simple, Transparent
        <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">Pricing</span>
      </h2>
      <p class="text-lg text-gray-400 max-w-xl mx-auto">
        Start free, upgrade when you're ready. No subscriptions, no recurring fees.
      </p>
    </div>
    
    <!-- Pricing Cards -->
    <div class="flex flex-wrap justify-center gap-6 max-w-3xl mx-auto">
      {pricingTiers.map((tier) => (
        <div class={`${tier.cardClass} max-w-md w-full md:w-auto md:flex-1`}>
          {tier.isPopular && (
            <div class="absolute top-3 right-3 px-2 py-1 bg-orange-500 text-white text-xs font-medium rounded-full">
              POPULAR
            </div>
          )}
          
          <div class="text-center mb-6">
            <h3 class="text-xl font-semibold mb-2 text-white">{tier.name}</h3>
            <div class="text-3xl font-bold mb-2 text-white">
              {tier.price}
              {tier.priceSubtext && <span class="text-base font-normal text-gray-400">{tier.priceSubtext}</span>}
            </div>
            <p class="text-gray-400">{tier.description}</p>
          </div>
          
          <div class="space-y-3 mb-6">
            {tier.features.map((feature) => (
              <div class="flex items-center gap-3">
                <svg class={`w-${tier.isPopular ? '5' : '4'} h-${tier.isPopular ? '5' : '4'} text-${tier.isPopular ? 'orange' : 'green'}-400 flex-shrink-0`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class={tier.isPopular ? "text-white font-medium" : "text-gray-300 text-sm"}>{feature}</span>
              </div>
            ))}
          </div>
          
          {tier.buttonLink.startsWith('http') ? (
            <a href={tier.buttonLink} class={tier.buttonClass}>
              {tier.buttonText}
            </a>
          ) : (
            <button class={tier.buttonClass}>
              {tier.buttonText}
            </button>
          )}
          
          {tier.isPopular && (
            <p class="text-center text-xs text-gray-400 mt-3">
              Lifetime access, no recurring fees
            </p>
          )}
        </div>
      ))}
    </div>
    
    <!-- Features Comparison -->
    <div class="mt-16 text-center">
      <p class="text-gray-400 mb-8">Why traders choose Pro:</p>
      <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {proStats.map((stat) => (
          <div class="text-center">
            <div class="text-2xl font-bold text-orange-400 mb-2">{stat.value}</div>
            <p class="text-gray-300">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>