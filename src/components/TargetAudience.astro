---
import content from '../data/targetAudience.json';
---

<section class="py-16 px-6 bg-black">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
        {content.header.title.main}
        <span class="text-orange-400">{content.header.title.highlight}</span>
      </h2>
      <p class="text-lg text-gray-400 max-w-2xl mx-auto">
        {content.header.description}
      </p>
    </div>
    
    <!-- Target Groups Grid -->
    <div class="flex flex-wrap gap-6 mb-12">
      {content.targetGroups.map((group) => (
        <div class="flex-1 min-w-64 p-6 rounded-lg bg-gray-900 border border-gray-800">
          <!-- Icon and Title -->
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={group.icon}></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white">{group.title}</h3>
          </div>
          
          <!-- Description -->
          <p class="text-gray-300 mb-4 leading-relaxed">
            {group.description}
          </p>
          
          <!-- Benefits List -->
          <ul class="space-y-2">
            {group.benefits.map((benefit) => (
              <li class="flex items-start gap-2 text-gray-300 text-sm">
                <span class="w-1.5 h-1.5 bg-orange-400 rounded-full mt-1.5 flex-shrink-0"></span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom Note -->
    <div class="text-center max-w-2xl mx-auto">
      <div class="p-4 rounded-lg bg-red-900/20 border border-red-800/30">
        <p class="text-red-300 font-medium mb-1">
          ⚠️ {content.bottomNote.text}
        </p>
        <p class="text-red-400 text-sm">
          {content.bottomNote.subtext}
        </p>
      </div>
    </div>
  </div>
</section>