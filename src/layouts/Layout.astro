---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Trade smarter with TradeGPT. Get clear BUY, SELL, or WAIT signals backed by live data & macro analysis. Perfect for crypto swing traders with full-time jobs." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-black text-white font-sans">
		<slot />
		
		<!-- Footer with Legal Links -->
		<footer class="py-4 px-4 text-center text-gray-500 text-sm">
			<div class="max-w-4xl mx-auto">
				<div class="flex flex-wrap justify-center gap-4">
					<a href="/tnc" class="hover:text-orange-400 transition-colors">Terms & Conditions</a>
				</div>
				<div class="mt-4">
					Â© {new Date().getFullYear()} TradeGPT
					<!-- by <a href="https://aipedia.id" class="hover:text-orange-400 transition-colors">AIPEDIA.ID</a>. -->
					All rights reserved.
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	:root {
		--font-custom: 'Plus Jakarta Sans', Helvetica Neue, Helvetica, Arial, sans-serif;
	}
	
	html {
		scroll-behavior: smooth;
		font-family: var(--font-custom);
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		font-family: var(--font-custom);
	}
</style>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
