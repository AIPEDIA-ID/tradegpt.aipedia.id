---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<meta name="description" content="TradeGPT adalah asisten AI untuk trader crypto. Dapatkan sinyal BUY, SELL, atau WAIT berbasis data teknikal dan makro — cocok untuk trader Indonesia yang sibuk." />
		<meta name="keywords" content="trading crypto, AI trading, sinyal trading, swing trader Indonesia, analisa crypto otomatis, TradeGPT Indonesia" />
		<meta name="author" content="TradeGPT by AIPEDIA.ID" />

		<!-- Canonical & Language -->
		<link rel="canonical" href="https://tradegpt.aipedia.id/" />
		<meta name="language" content="id" />
		<!-- Open Graph (Facebook, LinkedIn) -->
		<meta property="og:title" content="TradeGPT – Sinyal Trading Crypto dengan Bantuan AI" />
		<meta property="og:description" content="Analisa crypto otomatis seperti trader profesional. Cukup 15 menit per hari untuk ambil keputusan lebih cerdas." />
		<meta property="og:url" content="https://tradegpt.aipedia.id/" />
		<meta property="og:image" content="https://tradegpt.aipedia.id/og-image.jpg" />
		<meta property="og:type" content="website" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="TradeGPT – AI Assistant untuk Trading Crypto" />
		<meta name="twitter:description" content="Dapatkan sinyal BUY, SELL, atau WAIT berbasis analisa nyata. Cocok untuk trader Indonesia yang sibuk." />
		<meta name="twitter:image" content="https://tradegpt.aipedia.id/og-image.jpg" />

		<!-- Favicon & Fonts -->
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-black text-white font-sans">
		<slot />
		
		<!-- Footer with Legal Links -->
		<footer class="py-4 px-4 text-center text-gray-500 text-sm">
			<div class="max-w-4xl mx-auto">
				<div class="flex flex-wrap justify-center gap-4">
					<a href="/tnc" class="hover:text-orange-400 transition-colors">Terms & Conditions</a>
				</div>
				<div class="mt-4">
					© {new Date().getFullYear()} TradeGPT
					<!-- by <a href="https://aipedia.id" class="hover:text-orange-400 transition-colors">AIPEDIA.ID</a>. -->
					All rights reserved.
				</div>
			</div>
		</footer>
	</body>
</html>

<style>
	:root {
		--font-custom: 'Plus Jakarta Sans', Helvetica Neue, Helvetica, Arial, sans-serif;
	}
	
	html {
		scroll-behavior: smooth;
		font-family: var(--font-custom);
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		font-family: var(--font-custom);
	}
</style>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
